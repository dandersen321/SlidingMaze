<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/maze1"
    android:gravity="center" 
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:text="Number of Rows: "
                android:textColor="#079AAB"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/textViewRowNum"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".50"
                    android:gravity="center"
                    android:textColor="#079AAB"
                    android:textSize="25sp" />

                <SeekBar
                    android:id="@+id/seekBarRowNum"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".50"
                    android:max="95"
                    android:progress="15"
                    android:textColor="#7DDB42" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:text="Number of Cols: "
                android:textColor="#079AAB"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/textViewColNum"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".50"
                    android:gravity="center"
                    android:textColor="#079AAB"
                    android:textSize="25sp" />

                <SeekBar
                    android:id="@+id/seekBarColNum"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".50"
                    android:max="95"
                    android:progress="15"
                    android:textColor="#7DDB42" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:text="Difficulty Level: "
                android:textColor="#079AAB"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/textViewDifficultyLevel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".50"
                    android:gravity="center"
                    android:textColor="#079AAB"
                    android:textSize="25sp" />

                <SeekBar
                    android:id="@+id/seekBarDifficultyLevel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".50"
                    android:max="9"
                    android:progress="4"
                    android:textColor="#7DDB42" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:gravity="center"
                android:text="Random Seed:"
                android:textColor="#079AAB"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editTextRandomSeed"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:textColor="#7DDB42"
                android:textSize="25sp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:gravity="center"
            android:text="Submit"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>